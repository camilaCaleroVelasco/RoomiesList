<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <!-- Roommate Name -->
    <TextView
        android:id="@+id/purchaseRoommateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purchased by: John Doe"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- Total Price -->
    <TextView
        android:id="@+id/purchaseTotalPriceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Price: $0.00"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp" />

    <!-- Timestamp -->
    <TextView
        android:id="@+id/purchaseTimestampTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purchased on: [Timestamp]"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="2dp" />

    <!-- Items List -->
    <TextView
        android:id="@+id/purchaseItemsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Items: [Item1, Item2, Item3...]"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="6dp" />

    <!-- Edit Group Button -->
    <Button
        android:id="@+id/editGroupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Group"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/holo_purple"
        android:textColor="@android:color/white" />

</LinearLayout>
